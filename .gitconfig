
[init]
    defaultBranch = main
[user]
    name = nsanso
    email = nsansoni97@gmail.com
[filter "gitignore"]
    clean = "sed '/^#gitignore$/{N;d}'; sed '/#gitignore$/d';"
    smudge = cat
[merge]
    tool = nvimdiff
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "nvimdiff"]
    layout = "LOCAL,BASE,REMOTE / MERGED"
[core]
    editor = nvim
    pager = bat -p
